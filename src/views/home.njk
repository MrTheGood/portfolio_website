{% extends "base.njk" %}

{# Demo content for now #}
{% set projects = [{images: ['https://portfolio.insertcode.eu/media/app_android_portfolio_1.png'], title: "meow", date: 'now', description: 'Lorem ipsum. In publishing and graphic design, lorem ipsum is a placeholder text commonly used to demonstrate the visual form of a document without relying on meaningful content. Replacing the actual content with placeholder text allows designers to design the form of the content before the content itself has been produced.', tags: [['one','#00675b'],['two','#009688'],['three','#002984']]},{images: [], title: "t", date: 'd', description: 'de', tags: [['two','#009688'],['four','#3f51b5']]} ] %}

{% block main %}
<div class="page-content" style="background: #f5f5f5;"> 
	{% for item in projects %}
		<section class="section--center mdl-grid mdl-grid--no-spacing mdl-shadow--2dp">
			<header class="section__play-btn mdl-cell mdl-cell--3-col-desktop mdl-cell--2-col-tablet mdl-cell--4-col-phone mdl-color--amber-200 mdl-color-text--white" style="background: url('{{ item.images | first }}') center / cover;">
			</header>
			<div class="mdl-card mdl-cell mdl-cell--9-col-desktop mdl-cell--6-col-tablet mdl-cell--4-col-phone">
				<div class="mdl-card__supporting-text">
					<h4 style="margin-bottom: 0;">{{ item.title }}</h4>
					<p style="color: #757575;">{{ item.date }}</p>
					{{ item.description | truncate(50, true) }}
				</div>
				<div class="mdl-card__actions">
					{% for tag in item.tags %}
						<span class="mdl-chip" style="color: #ffffff; background-color: {{tag[1]}};">
							<span class="mdl-chip__text">{{ tag[0] | capitalize }}</span>
						</span>
					{% endfor %}
				</div>
			</div>
		</section>
	{% endfor %}
</div>
{% endblock %}