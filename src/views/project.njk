{% extends "base.njk" %}

{% block main %}
    <div class="mdl-project__post mdl-grid">
        <div class="mdl-card mdl-shadow--4dp mdl-cell mdl-cell--12-col">
            {% if project.images %}
                <div class="mdl-back">
                    {# TODO: NOT ALWAYS VISIBLE #}
                    <a class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon" href="../">
                        <i class="material-icons">arrow_back</i>
                    </a>
                </div>
                <img class="mdl-card__media" src="{{ project.images | first }}" alt=""/>
            {% endif %}
            <div class="mdl-color-text--grey-700 mdl-card__supporting-text meta">
                <div class="project_type" style="background-color: {{ project.type[1] }}">
                    <i class="material-icons">{{ project.type[0] }}</i>
                </div>
                <div class="project_title">
                    <strong>{{ project.title }}</strong>
                    <span>{{ project.date }}</span>
                </div>
                <div class="section-spacer"></div>
                {% if project.links.github | length > 0 %}
                    <a class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon" href="{{ project.links.github }}" target="_blank">
                        <i class="octicon">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" class="octicon">
                                <path fill-rule="evenodd" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0 0 16 8c0-4.42-3.58-8-8-8z"></path>
                            </svg>
                        </i>
                    </a>
                {% endif %}
                {% if project.links.link | length > 0 %}
                    <a class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon" href="{{ project.links.link }}" target="_blank">
                        <i class="material-icons">link</i>
                    </a>
                {% endif %}
                {% if project.links.playstore | length > 0 %}
                    <a class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon" href="{{ project.links.playstore }}" target="_blank">
                        <i class="material-icons">android</i>
                    </a>
                {% endif %}
                {# TODO: IMPLEMENT Share #}
                <button class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon">
                    <i class="material-icons">share</i>
                </button>
            </div>
            <div class="mdl-chips">
                {% for tag in project.tags %}
                    <span class="mdl-chip" style="background-color: {{ tag[1] }};">
                        <span class="mdl-chip__text">{{ tag[0] | capitalize }}</span>
                    </span>
                {% endfor %}
            </div>
            <div class="mdl-color-text--grey-700 mdl-card__supporting-text">
                <p>{{ project.description | safe }}</p>
            </div>
        </div>
    </div>
{% endblock %}