{% extends "base.njk" %}

{# Demo content for now #}
{% set project = {images: ['https://portfolio.insertcode.eu/media/app_android_portfolio_1.png'], title: "meow", date: 'now', description: 'Lorem ipsum. In publishing and graphic design, lorem ipsum is a placeholder text commonly used to demonstrate the visual form of a document without relying on meaningful content. Replacing the actual content with placeholder text allows designers to design the form of the content before the content itself has been produced.', tags: [['one','#00675b'],['two','#009688'],['three','#002984']]} %}

{% block main %}
    <style>
        {# TODO: Move this css to the css document, check if everything is in order #}
        body::before {
            background-size: cover;
            background-attachment: fixed;
            content: '';
            will-change: transform;
            z-index: -1;
            left: 0;
            right: 0;
            bottom: 0;
            top: 0;
            position: fixed;
        }

        .mdl-project .mdl-project__posts {
            max-width: 900px;
            padding: 0;
            display: flex;
            width: 100%;
            margin: 0 auto;
            flex-shrink: 0;
        }

        .mdl-project .mdl-card {
            display: flex;
            flex-direction: column;
            align-items: stretch;
            min-height: 360px;
        }

        .mdl-project .mdl-card__media {
            box-sizing: border-box;
            background-size: cover;
            padding: 24px;
            display: flex;
            flex-grow: 1;
            flex-direction: row;
            align-items: flex-end;
            cursor: pointer;
        }

        .mdl-project .mdl-card__media a,
        .mdl-project .mdl-card__title a {
            color: inherit;
        }

        .mdl-project .mdl-card__supporting-text {
            width: 100%;
            padding: 16px;
            min-height: 64px;
            display: flex;
            align-items: center;
        }

        .mdl-project .mdl-card__supporting-text strong {
            font-weight: 400;
        }

        .mdl-project .mdl-card__media ~ .mdl-card__supporting-text {
            min-height: 64px;
        }

        .mdl-project .mdl-card__supporting-text:not(:last-child) {
            box-sizing: border-box;
            min-height: 76px;
        }

        .mdl-project:not(.mdl-project--projectpost) .mdl-card__supporting-text ~ .mdl-card__supporting-text {
            border-top: 1px solid rgba(0, 0, 0, 0.1);
        }

        .mdl-project .meta {
            box-sizing: border-box;
            padding: 16px;
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: flex-start;
            height: auto;
        }

        .mdl-project .meta > *:first-child {
            margin-right: 16px;
        }

        .mdl-project .meta > * {
            display: flex;
            flex-direction: column;
        }

        .mdl-project .mdl-card > a {
            color: inherit;
            text-decoration: none;
            font-weight: inherit;
        }

        .mdl-project--projectpost .mdl-project__posts > .mdl-card .mdl-card__media {
            height: 280px;
        }

        .mdl-project--projectpost .meta > * {
            align-items: center;
        }

        .mdl-project--projectpost .meta + .mdl-card__supporting-text {
            border: 0;
            display: flex;
            flex-direction: column;
        }

        .mdl-project--projectpost .meta + .mdl-card__supporting-text p {
            max-width: 512px;
            margin: 16px auto;
            font-size: 16px;
            line-height: 28px;
        }

        .mdl-project--projectpost .mdl-back {
            position: absolute;
            top: 16px;
            left: 16px;
            color: white;
            z-index: 9999;
        }

        .mdl-project .section-spacer {
            flex-grow: 1;
        }

        .mdl-project .project_type {
            width: 44px;
            height: 44px;
            border-radius: 22px;
            background-color: #858585;
        }

        .mdl-project .project_type .material-icons {
            margin: auto;
            color: white;
        }

        .octicon {
            fill: currentColor;
            margin: auto;
            width: 24px;
            height: 24px;
        }

    </style>
    <div class="mdl-project mdl-project--projectpost">
        <div class="page-content" style="background: #f5f5f5;">
            <div class="mdl-project__posts mdl-grid">
                <div class="mdl-card mdl-shadow--4dp mdl-cell mdl-cell--12-col">
                    <div class="mdl-back">
                        <a class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon" href="../" title="go back" role="button">
                            <i class="material-icons">arrow_back</i>
                        </a>
                    </div>
                    <div class="mdl-card__media mdl-color-text--grey-50" style="background: url('{{ project.images | first }}') center / cover;">
                    </div>
                    <div class="mdl-color-text--grey-700 mdl-card__supporting-text meta">
                        <div class="project_type">
                            <i class="material-icons">{{ project.type }}</i>
                        </div>
                        <div>
                            <strong>{{ project.title }}</strong>
                            <span style="color: #757575;">{{ project.date }}</span>
                        </div>
                        <div class="section-spacer"></div>
                        <button class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon">
                            <i class="octicon">
                                <svg xmlns="http://www.w3.org/2000/svg" class="octicon">
                                    <path fill-rule="evenodd" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
                                </svg>
                            </i>
                        </button>
                        <button class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon">
                            <i class="material-icons">link</i>
                        </button>
                        <button class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon">
                            <i class="material-icons">android</i>
                        </button>
                        <button class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon">
                            <i class="material-icons">share</i>
                        </button>
                    </div>
                    <div>
                        {% for tag in project.tags %}
                            <span class="mdl-chip" style="color: #ffffff; background-color: {{ tag[1] }};">
                                <span class="mdl-chip__text">{{ tag[0] | capitalize }}</span>
                            </span>
                        {% endfor %}
                    </div>
                    <div class="mdl-color-text--grey-700 mdl-card__supporting-text">
                        {{ project.description }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}